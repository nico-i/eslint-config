{
  "name": "@nico-i/eslint-config",
  "version": "2.7.0",
  "description": "My ESLint config.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nico-i/eslint-config.git"
  },
  "private": true,
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "out",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "eslintconfig",
    "eslint"
  ],
  "type": "module",
  "author": "Nico Ismaili",
  "license": "MIT",
  "peerDependencies": {
    "eslint": "^9.28.0",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-jsx-a11y": "^6.10.2"
  },
  "scripts": {
    "build": "cd ./src && bun build ./index.ts --outdir ../out --minify --target node && bunx tsc",
    "lint": "eslint . --ext .ts --ignore-pattern './out/*'",
    "lint:fix": "eslint . --ext .ts --ignore-pattern './out/*' --fix",
    "prepare": "husky || true"
  },
  "dependencies": {
    "eslint-config-airbnb-base": "^15.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@eslint/js": "^9.28.0",
    "@nico-i/prettier-config": "^1.0.0",
    "@types/bun": "latest",
    "@types/eslint-plugin-jsx-a11y": "^6.10.0",
    "@types/eslint__js": "^8.42.3",
    "commitlint-plugin-spend": "^1.0.1",
    "husky": "^9.1.6",
    "lint-staged": "16.1.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.0"
  },
  "bugs": {
    "url": "https://github.com/nico-i/eslint-config/issues"
  },
  "homepage": "https://github.com/nico-i/eslint-config#readme"
}
